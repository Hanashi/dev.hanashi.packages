<?xml version="1.0" encoding="UTF-8"?>
<package name="dev.hanashi.packages" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/6.0/package.xsd">
    <packageinformation>
        <packagename><![CDATA[Package server]]></packagename>
        <packagedescription><![CDATA[Ein kleiner Paketserver der auf die Filebase von WoltLab aufbaut.]]></packagedescription>
		<isapplication>1</isapplication>
        <version>1.0.0</version>
        <date>2023-10-21</date>
    </packageinformation>

    <authorinformation>
        <author><![CDATA[Hanashi Development]]></author>
        <authorurl><![CDATA[https://hanashi.dev/]]></authorurl>
    </authorinformation>

    <requiredpackages>
        <requiredpackage minversion="6.0.2">com.woltlab.wcf</requiredpackage>
        <requiredpackage minversion="6.0.1">com.woltlab.filebase</requiredpackage>
    </requiredpackages>

    <instructions type="install">
		<!-- files -->
        <instruction type="file" application="packages" />
		
		<!-- templates -->
		<instruction type="acpTemplate" application="packages" />
		
		<!-- language -->
        <instruction type="language"/>
		
		<!-- listener -->
        <instruction type="eventListener" />
		<instruction type="templateListener" />
		
		<!-- config -->
        <instruction type="acpMenu" />
        <instruction type="userGroupOption" />
		<instruction type="cronjob" />
        <instruction type="database">acp/database/install_dev.hanashi.packages.php</instruction>
    </instructions>
</package>
