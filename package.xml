<?xml version="1.0" encoding="UTF-8"?>
<package name="eu.hanashi.packages" xmlns="https://www.woltlab.com" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://www.woltlab.com https://www.woltlab.com/XSD/tornado/package.xsd">
    <packageinformation>
        <packagename><![CDATA[Package server by Hanashi]]></packagename>
        <packagedescription><![CDATA[Ein kleiner Paketserver der auf die Filebase von WoltLab aufbaut.]]></packagedescription>
		<isapplication>1</isapplication>
        <version>1.0.0 Alpha 4</version>
        <date>2018-07-22</date>
    </packageinformation>

    <authorinformation>
        <author><![CDATA[Hanashi]]></author>
        <authorurl><![CDATA[https://hanashi.eu/]]></authorurl>
    </authorinformation>
	
	<compatibility>
		<api version="2017" />
		<api version="2018" />
	</compatibility>

    <requiredpackages>
        <requiredpackage minversion="3.0.11 pl 1">com.woltlab.wcf</requiredpackage>
        <requiredpackage minversion="3.0.11 pl 1">com.woltlab.filebase</requiredpackage>
    </requiredpackages>
	
	<excludedpackages>
        <excludedpackage version="3.2.0 Alpha 1">com.woltlab.wcf</excludedpackage>
    </excludedpackages>

    <instructions type="install">
		<!-- files -->
        <instruction type="file" />
		
		<!-- templates -->
		<instruction type="acpTemplate" />
		
		<!-- language -->
        <instruction type="language"/>
		
		<!-- listener -->
        <instruction type="eventListener" />
		<instruction type="templateListener" />
		
		<!-- config -->
        <instruction type="acpMenu" />
        <instruction type="sql" />
        <instruction type="userGroupOption" />
		<instruction type="cronjob" />
    </instructions>
	<instructions type="update" fromversion="1.0.0 Alpha 3">
		<!-- files -->
        <instruction type="file" />
	</instructions>
</package>
